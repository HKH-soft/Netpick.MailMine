# Root environment variables for docker-compose.yml
# Copy to .env and customize

# Application environment (staging or production)
APP_ENV=production

# Domain configuration
DOMAIN=domain.com
CERTBOT_EMAIL=you@domain.com

# Redis password (must match redis.env)
REDIS_PASSWORD=change_this_secure_password

# PostgreSQL credentials (must match postgres.env)
POSTGRES_USERNAME=mailmine
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=mailmine

# Prometheus/Actuator basic auth
ACTUATOR_USERNAME=admin
ACTUATOR_PASSWORD=change_this_secure_password
